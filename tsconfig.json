{
  "compilerOptions": {
    "target": "es5",                     
    "module": "commonjs",
    "outDir": "./dist",                                   
    "baseUrl": "./src",                             
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@erros/*": ["erros/*"],
      "@utils/*": ["utils/*"]
    },                                             
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "resolveJsonModule": true
  }
}
